<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"    
                    xmlns:local="clr-namespace:LfkGUI">
    <ContextMenu x:Key="RemoveFromTreeViewContextMenu">
        <MenuItem x:Name="CloseMenuItem" Header="Remove"/>
    </ContextMenu>

    <DockPanel x:Key="ModalDialogWithText" Width="300" Height="200" LastChildFill="False" Margin="20">
        <TextBlock DockPanel.Dock="Top" x:Name="Header" TextAlignment="Center" Foreground="{DynamicResource SecondaryAccentBrush}" Margin="0,0,0,30" FontWeight="DemiBold" FontSize="20"/>
        <TextBlock DockPanel.Dock="Top" x:Name="TextContent" TextAlignment="Left" TextWrapping="Wrap" FontWeight="DemiBold" FontSize="15"/>
        <Button DockPanel.Dock="Top" Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Background="{DynamicResource SecondaryAccentBrush}"  Content="OK" HorizontalAlignment="Center" Margin="0,40,0,40"/>
    </DockPanel>
    
</ResourceDictionary>