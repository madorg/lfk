<Page x:Class="LfkGUI.Repository.CommitCommandPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LfkGUI.Repository"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="CommitCommandPage">

    <Grid>
        <StackPanel Margin="30">
            <Label Content="Commit message: "/>
            <TextBox Name="CommitMessageTextBox"
                  TextWrapping="Wrap"
                  AcceptsReturn="True"
                  VerticalScrollBarVisibility="Visible" 
                  MaxHeight="200" >       
            </TextBox>
            <Button x:Name="CommitButton" Content="Commit" HorizontalAlignment="Right"  Margin="10" Click="CommitButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
